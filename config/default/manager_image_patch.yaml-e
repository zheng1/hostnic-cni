apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: hostnic-node
spec:
  template:
    spec:
      initContainers:
        - image: kubespheredev/hostnic:vbc-test
          name: hostnic-init
          imagePullPolicy: IfNotPresent
      containers:
        # Change the value of image field below to your controller image URL
        - image: kubespheredev/hostnic:vbc-test
          name: hostnic-node
          imagePullPolicy: IfNotPresent